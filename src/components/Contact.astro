      <div class="contact-form">
        <div class="form-card">
          <h3 class="form-title">Mesaj Göndərin</h3>
          <form id="contactForm">
            <div class="form-group">
              <label for="name">Ad Soyad</label>
              <input type="text" id="name" name="name" placeholder="Adınızı daxil edin" required>
            </div>
            <div class="form-group">
              <label for="email">E-poçt</label>
              <input type="email" id="email" name="email" placeholder="E-poçt ünvanınızı daxil edin" required>
            </div>
            <div class="form-group">
              <label for="message">Mesaj</label>
              <textarea id="message" name="message" rows="5" placeholder="Mesajınızı daxil edin" required></textarea>
            </div>
            <button type="submit" id="submitButton" class="btn">Mesaj Göndər</button>
            <div id="statusMessage" class="status-message"></div>
