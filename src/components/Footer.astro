            <li><a href="#about">Haqqımızda</a></li>
            <li><a href="#services">Xidmətlər</a></li>
            <li><a href="#faq">FAQ</a></li>
            <li><a href="#contact">Əlaqə</a></li>
          </ul>
        </div>
        <div class="link-group">
          <h4>Xidmətlər</h4>
          <ul>
            {footerServices.map(service => (
              <li><a href={service.link}>{service.name}</a></li>
            ))}
          </ul>
        </div>
        <div class="link-group">
          <h4>Əlaqə</h4>
          <ul>
            <li><a href={`mailto:${contactInfo.email}`}>{contactInfo.email}</a></li>
            <li><a href={`tel:${contactInfo.phone}`}>{contactInfo.phone}</a></li>
            <li><a href="#" class="address-link">{contactInfo.address}</a></li>
          </ul>
        </div>
        <div class="link-group">
          <h4>Hüquqi</h4>
          <ul>
            <li><a href="#">Məxfilik Siyasəti</a></li>
